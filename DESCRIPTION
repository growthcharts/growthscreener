Package: growthscreener
Title: Finding Children with Unusual Growth Patterns
Version: 1.8.0
Authors@R: 
    c(person(given = "Paula",
           family = "van Dommelen",
           role = c("aut", "cre"),
           email = "paula.vandommelen@tno.nl"),
       person(given = "Stef",
           family = "van Buuren",
           role = c("aut"),
